    id="dark"
    description="Dark"
    textColor="#FFFFC0"
>

    <color id="ICON_COLOR_TRANSFORM_BRIGHTNESS" value="0xC0B0A0"/>
    <color id="ICON_COLOR_TRANSFORM_CONTRAST" value="0x404040"/>
    <style
        id="BUTTON"
        fontSize="large"
        background="btn_default_normal.9"
    >
